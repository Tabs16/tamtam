

OS_ARCH = $(subst /,_,$(shell uname -s))
COMPILER =
ifeq (CYGWIN,$(findstring CYGWIN,$(OS_ARCH)))
	COMPILER = --compiler=mingw32
endif


PYTHON = python
ifeq (Linux,$(OS_ARCH))
	PYHOME = --home=/u/eckdoug/share/linux
	PYTHON = python2.3
endif

default: 
	$(PYTHON) setup.py build $(COMPILER) install $(PYHOME) 

clean:
	rm -rf build





